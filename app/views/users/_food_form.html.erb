
<%= form_for @user do |f| %>
       <% @foods.each do |food| %>
       <%= check_box_tag :foods, food.id, @user.foods.include?(food), :name => 'user[food]' %>
       <%= label_tag :foods, food.name %>
        <% end %>
       <%= f.submit "Submit", class: "btn btn-default center-block" %>
  <% end %>